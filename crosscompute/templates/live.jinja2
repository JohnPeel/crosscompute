{% extends 'base.jinja2' %}

{% block body_script %}
{# TODO: Use constant for /echoes #}
ECHOES_ROUTE = '/echoes'

let echoSource
let serverTime
// TODO: Fix name of timeout
let reconnectionId

function connect() {
  echoSource = new EventSource(ECHOES_ROUTE)

  echoSource.onopen = function() {
    console.log('connected')
    clearTimeout(reconnectionId)
  }

  echoSource.onmessage = function(message) {
    const messageData = message.data
    console.log(messageData, serverTime)
    if (messageData != serverTime) {
      if (serverTime) {
        console.log('RELOAD!')
        location.reload()
      }
      serverTime = messageData
    }
  }

  echoSource.onerror = function() {
    console.log('disconnected')
    echoSource.close()
    clearTimeout(reconnectionId)
    reconnectionId = setTimeout(connect, 3000)
  }
}

connect()
{% endblock %}
