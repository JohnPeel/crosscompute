{% extends 'page.jinja2' %}

{% block page_title %}
{% block body_title %}{{ render_title(tool_name) }}{% endblock %} &middot; Tools &middot; {{ website_name -}}
{% endblock %}

{% block body_content %}
{{ super() -}}

<form id="tool-form" method="post">
{% for tool_argument_name in tool_argument_names if tool_argument_name not in RESERVED_ARGUMENT_NAMES %}
{% from get_data_type_for(tool_argument_name).template import render_query with context %}
<div class="form-group">{{ render_query(tool_argument_name) }}</div>
{% endfor %}
<button type="submit" class="btn btn-primary btn-lg">Run</button>
</form>
{% endblock %}

{% block body_script_inline %}
{{ super() -}}
{% if tool_argument_names %}
$('#tool-form').find('[name]').first().focus();
{% endif %}
{% endblock %}
